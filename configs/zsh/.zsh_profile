## Python3 #################################################
ve() {
    if [[ -z ${VIRTUAL_ENV} ]]; then
        if [[ ! -d venv ]]; then
            virtualenv venv
        fi
        source venv/bin/activate
        echo "python:  $(which python3)"
        echo "pip:     $(which pip3)"
    else
        echo "You are already in a virtual environment"
        return 1
    fi
}
